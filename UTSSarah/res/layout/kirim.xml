<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
 <TextView
        android:id="@+id/ke"
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Ke : "
		android:textStyle="bold"
		/>
 <Spinner
		android:id="@+id/spinner1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/ke"/>
    
 <TextView
        android:id="@+id/tpesan"
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Isi Pesan : "
		android:textStyle="bold"
		android:layout_below="@+id/spinner1"
		android:paddingTop="2dp"
		/>
 <EditText
        android:id="@+id/edpesan"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint=" Masukkan Pesan Anda"
		android:layout_marginTop="2dp"
		android:layout_below="@+id/tpesan"/>

 <Button
     android:id="@+id/btkirim2"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/edpesan"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="19dp"
     android:paddingBottom="2dip"
     android:paddingTop="6dip"
     android:text="Kirim Pesan"
     android:textSize="16sp"
     android:textStyle="bold" />

</RelativeLayout>
