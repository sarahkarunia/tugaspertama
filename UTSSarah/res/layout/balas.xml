<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:padding="16dp">
    
  <TextView 
        android:id="@+id/isipesan"
        android:text="Isi Pesan"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    
    <TextView 
        android:id="@+id/pesanmasuk"
        android:text="Hello"
        android:scrollbars="vertical"
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"        
        android:layout_below="@+id/isipesan"
        />
    
    <TextView 
        android:id="@+id/teksbalasan"
        android:text="Balasan"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pesanmasuk"
        />
    
    <EditText 
        android:id="@+id/entripesan"
        android:scrollbars="vertical"
        android:layout_marginTop="8dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"        
        android:layout_below="@+id/teksbalasan"
        />
    
    <Button 
        android:id="@+id/btsend"
        android:text="Kirim"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/entripesan"
        />
</RelativeLayout>
